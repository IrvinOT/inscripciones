{{>header}}
<script src="js/alum.js"></script>
<div class="modal-main">
    <div class="row">
        <h4>Alumnos</h4>
        <div class="col s12 m12">
            <table class="responsive-table highlight">
                <thead>
                    <th>Nombre</th>
                    <th>Grupo</th>
                    <th>Tutor</th>
                    <th><a id="addAlum" class="waves-effect waves-light btn modal-trigger" href="#modal1"><i
                                class="fas fa-user-plus"></i></a></th>
                </thead>
                <tbody>
                    {{#if students}}
                    {{#each students}}
                    <tr>
                        <td>{{nombre}} {{a_Paterno}} {{a_Materno}}</td>
                        <td>{{grupo}}</td>
                        <td>{{tutor}}</td>
                        <td><a id="{{_id}}" class="waves-effect waves-light  modal-trigger edit" href="#modal1"><i
                                    class="fas fa-pen"></i></a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="modal1" class="modal">
    {{>addAlumno}}
</div>
{{>footer}}