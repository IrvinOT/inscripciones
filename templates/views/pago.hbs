{{>header}}
<script src="js/pag.js"></script>
<div class="modal-main">
    <div class="row">
        <h4>Pagos</h4>
        <div class="col s12 m12">
            <table class="responsive-table highlight">
                <thead>
                    <th>Alumno</th>
                    <th>Referencia</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th><a id="addPay" class="waves-effect waves-light btn modal-trigger" href="#modal1"><i
                                class="fas fa-plus-square"></i></a></th>
                </thead>
                <tbody>
                    {{#if pays}}
                    {{#each pays}}
                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{referencia}}</td>
                        <td>{{aportacion}}</td>
                        <td class="date">{{fecha}}</td>
                        <td><a id="{{_id}}" class="waves-effect waves-light  modal-trigger edit" href="#modal1"><i
                                    class="fas fa-pen"></i></a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="modal1" class="modal">
    {{>addPago}}
</div>
{{>footer}}